{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "EEPROM": {
            "title": "FRU device EEPROM schema",
            "description": [
                "This schema describe the address/Bus and Size of the",
                "EEPROM FRU device"
            ],
             "additionalProperties": false,
             "properties": {
                "Address": {
                    "type": "string"
                },
                "Bus": {
                    "type": "string"
                },
                "Name": {
                    "type": "string"
                },
                "Size": {
                    "description": [
                        "Describe the EEPROM size in bytes"
                    ],
                    "type": "number"
                },
                "Type": {
                    "enum": [
                        "EEPROM"
                    ]
                }
            },
            "required": [
                "Name",
                "Type",
                "Size",
                "Address",
                "Bus"
            ],
            "type": "object"
        }
    }
}
