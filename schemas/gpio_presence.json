{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "GPIODeviceDetect": {
            "additionalProperties": false,
            "description": "Configuration for GPIO device presence daemon",
            "type": "object",
            "properties": {
                "Name": {
                    "description": "The name of the device",
                    "type": "string"
                },
                "Type": {
                    "description": "The type of configuration object",
                    "const": "GPIODeviceDetect"
                },
                "PresencePinNames": {
                    "description": "The type of leak detector.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "PresencePinValues": {
                    "description": "The GPIO pin name for the leak detector.",
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "Name",
                "Type",
                "PresencePinNames",
                "PresencePinValues"
            ]
        }
    }
}
