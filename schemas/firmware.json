{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "FirmwareInfoDef": {
            "description": "This indicates the properties which apply to all firmwares",
            "type": "object",
            "properties": {
                "VendorIANA": {
                    "description": "The IANA Enterprise Id of the hardware vendor",
                    "type": "number"
                },
                "CompatibleHardware": {
                    "description": "The compatible hardware with name format com.<vendor>.Hardware.<XXX> specified by vendor in phosphor-dbus-interfaces",
                    "type": "string"
                }
            },
            "required": ["VendorIANA", "CompatibleName"]
        },
        "PLDMDevice": {
            "description": "This indicates the properties which apply to all PLDM devices",
            "type": "object",
            "properties": {
                "Type": {
                    "description": "The type of the device",
                    "type": "string"
                },
                "Name": {
                    "description": "A recognisable name for the device",
                    "type": "string"
                },
                "RanOver": {
                    "description": "The bus over which the device is connected",
                    "type": "string",
                    "enum": ["MCTPI2CTarget", "MCTPI3CTarget"]
                },
                "FirmwareInfo": {
                    "$ref": "#/$defs/FirmwareInfoDef"
                }
            },
            "required": [
                "Type",
                "Name",
                "RanOver",
                "FirmwareInfo"
            ]
        }
    }
}
