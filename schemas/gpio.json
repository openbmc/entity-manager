{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "GpioExpander": {
            "additionalProperties": false,
            "properties": {
                "Name": {
                    "$ref": "#/$defs/Types/Name"
                },
                "Bus": {
                    "$ref": "#/$defs/Types/Bus"
                },
                "Address": {
                    "$ref": "#/$defs/Types/Address"
                },
                "Type": {
                    "type": "string",
                    "enum": ["PCA9554Iox", "PCA9555Iox"]
                },
                "GpioNames": {
                    "$ref": "#/$defs/Types/GpioNames"
                },
                "InterruptPin": {
                    "$ref": "#/$defs/Types/InterruptPin"
                }
            },
            "required": ["Name", "Type", "Address", "Bus", "GpioNames", "InterruptPin"],
            "type": "object"
        },
        "Types": {
            "Name": {
                "type": "string"
            },
            "Bus": {
                "type": ["string", "number"]
            },
            "Address": {
                "type": "string"
            },
            "Gpio": {
                "properties": {
                    "Name": {
                        "type": "string"
                    },
                    "Direction": {
                        "enum": ["I", "O"]
                    }
                },
                "type": "object"
            },
            "GpioNames": {
                "items": {
                    "type": "string"
                },
                "type": "array"
            },
            "InterruptPin": {
                "properties": {
                    "Phandle": {
                        "type": "string"
                    },
                    "Pin": {
                        "type": "number"
                    },
                    "Type": {
                        "enum": [
                            "IRQ_TYPE_LEVEL_HIGH",
                            "IRQ_TYPE_LEVEL_LOW",
                            "IRQ_TYPE_EDGE_RISING",
                            "IRQ_TYPE_EDGE_FALLING",
                            "IRQ_TYPE_EDGE_BOTH"
                        ]
                    }
                },
                "type": "object"
            }
        }
    }
}