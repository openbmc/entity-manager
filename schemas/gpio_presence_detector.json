{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "PinDeviceDetect": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "Type": {
                    "type": "string"
                },
                "PresencePinNames": {
                    "type": "object",
                    "properties": {
                        "Name": {
                            "type": "string"
                        }
                    }
                },
                "PresencePinPolarities": {
                    "type": "array",
                    "items": {
                        "enum": ["High", "Low"]
                    }
                },
                "require": ["Name", "Polarity"]
            }
        },
        "required": ["Name", "Type", "PresencePin"]
    }
}
