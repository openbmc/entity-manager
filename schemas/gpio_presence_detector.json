{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "GPIODeviceDetect": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
            },
            "Type": {
                "type": "string"
            },
            "PresencePinNames": {
                "type": "object",
                "properties": {
                    "Name": {
                        "type": "string"
                    }
                }
            },
            "PresencePinPolarities": {
                "enum": [ "High", "Low" ]
            },
            "require": [ "Name","Polarity" ]
            }
    },
    "required": ["Name", "Type", "PresencePin"]
  }
}
