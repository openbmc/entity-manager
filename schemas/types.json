{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "Types": {
            "Address": {
                "type": "string"
            },
            "AddressArray": {
                "type": "array",
                "items": {
                    "$ref": "types.json#/$defs/Types/Address"
                }
            },
            "AllowedFailures": {
                "type": "number",
                "multipleOf": 1,
                "minimum": 0
            },
            "BindConnector": {
                "type": "string"
            },
            "BridgeGpio": {
                "type": "array",
                "items": {
                    "additionalProperties": false,
                    "properties": {
                        "Name": {
                            "$ref": "types.json#/$defs/Types/Name"
                        },
                        "Label": {
                            "$ref": "types.json#/$defs/Types/Name"
                        },
                        "Polarity": {
                            "$ref": "types.json#/$defs/Types/Polarity"
                        },
                        "SetupTime": {
                            "type": "number"
                        }
                    },
                    "required": ["Name", "Polarity"]
                }
            },
            "Bus": {
                "type": ["string", "number"]
            },
            "CPURequired": {
                "type": "number",
                "multipleOf": 1,
                "minimum": 0
            },
            "ChannelNames": {
                "items": {
                    "type": "string"
                },
                "type": "array"
            },
            "Class": {
                "type": "string",
                "enum": [
                    "fan",
                    "temp",
                    "i2c",
                    "Aspeed2600_Hwmon",
                    "METemp",
                    "IpmbDevice",
                    "twin_lake",
                    "Gpio",
                    "PxeBridgeTemp",
                    "HSCBridge"
                ]
            },
            "Connector": {
                "properties": {
                    "Name": {
                        "type": "string"
                    },
                    "Pwm": {
                        "type": "number"
                    },
                    "Tachs": {
                        "items": {
                            "type": "number"
                        },
                        "type": "array"
                    }
                },
                "required": ["Name", "Pwm", "Tachs"],
                "type": "object"
            },
            "CpuID": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 1
            },
            "CurrScaleFactor": {
                "type": "number"
            },
            "Direction": {
                "type": "string",
                "enum": ["less than", "greater than"]
            },
            "DtsCritOffset": {
                "type": "number"
            },
            "EntityId": {
                "type": "number"
            },
            "EntityInstance": {
                "type": "number"
            },
            "GpioPins": {
                "items": {
                    "type": "number"
                },
                "type": "array"
            },
            "GpioPolarity": {
                "enum": ["Low"]
            },
            "Index": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 1
            },
            "InScaleFactor": {
                "type": "number"
            },
            "Labels": {
                "items": {
                    "type": "string"
                },
                "type": "array"
            },
            "MaxReading": {
                "type": "number"
            },
            "MaxValue": {
                "type": "number"
            },
            "MinMaxType": {
                "type": "number"
            },
            "Units": {
                "type": "string",
                "enum": [
                    "DegreesC",
                    "RPMS",
                    "Volts",
                    "Meters",
                    "Amperes",
                    "Watts",
                    "Joules",
                    "Percent",
                    "CFM",
                    "Pascals"
                ]
            },
            "MinReading": {
                "type": "number"
            },
            "MinValue": {
                "type": "number"
            },
            "Name": {
                "type": "string"
            },
            "OffsetValue": {
                "type": "number"
            },
            "Polarity": {
                "enum": ["High", "Low"]
            },
            "Polling": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "AveragingPeriod": {
                        "type": "number"
                    },
                    "Interval": {
                        "type": "number"
                    },
                    "PollRate": {
                        "type": "number"
                    },
                    "Label": {
                        "type": "string"
                    }
                }
            },
            "PowerFactorMax": {
                "type": "number"
            },
            "PowerFactorMin": {
                "type": "number"
            },
            "PowerPort": {
                "type": "boolean"
            },
            "PowerScaleFactor": {
                "type": "number"
            },
            "PowerState": {
                "enum": ["On", "ChassisOn", "Always", "BiosPost"]
            },
            "Presence": {
                "properties": {
                    "MonitorType": {
                        "enum": ["Event", "Polling"]
                    },
                    "PinName": {
                        "type": "string"
                    },
                    "Polarity": {
                        "$ref": "types.json#/$defs/Types/Polarity"
                    }
                },
                "type": "object"
            },
            "PresenceGpio": {
                "type": ["number", "array"]
            },
            "Pwm": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 1
            },
            "RedundantCount": {
                "type": "number"
            },
            "ScaleFactor": {
                "type": "number"
            },
            "ScaleValue": {
                "type": "number"
            },
            "SensorType": {
                "enum": ["current", "power", "voltage"]
            },
            "SlotId": {
                "type": "string"
            },
            "Tachs": {
                "items": {
                    "type": ["number", "string"]
                },
                "type": "array"
            },
            "Thresholds": {
                "items": {
                    "properties": {
                        "Direction": {
                            "enum": ["less than", "greater than"]
                        },
                        "Hysteresis": {
                            "type": "number"
                        },
                        "Label": {
                            "type": "string"
                        },
                        "Name": {
                            "type": "string"
                        },
                        "Severity": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 4
                        },
                        "Value": {
                            "type": "number"
                        }
                    },
                    "required": ["Direction", "Name", "Severity", "Value"],
                    "type": "object"
                },
                "type": "array"
            },
            "Timeout": {
                "type": "number"
            },
            "HostSMbusIndex": {
                "type": "number"
            },
            "OffsetType": {
                "type": "number"
            },
            "PollRate": {
                "type": "number",
                "exclusiveMinimum": 0
            }
        }
    }
}
