{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "MCTPI2CTarget": {
            "properties": {
                "Address": {
                    "description": "The physical address for the device on the I2C bus.",
                    "type": "string"
                },
                "Bus": {
                    "description": "The bus index to which the device is attached",
                    "type": "string"
                },
                "Inventory": {
                    "description": "The inventory name associated with this device",
                    "type": "string"
                },
                "Name": {
                    "description": "A recognisable name for the device",
                    "type": "string"
                },
                "PLDMSensors": {
                    "items": {
                        "properties": {
                            "ID": {
                                "type": "integer"
                            },
                            "Name": {
                                "type": "string"
                            }
                        },
                        "required": ["ID", "Name"],
                        "type": "object"
                    },
                    "type": "array"
                },
                "Type": {
                    "type": "string",
                    "enum": ["MCTPI2CTarget"]
                }
            },
            "required": ["Address", "Bus", "Inventory", "Name", "Type"],
            "type": "object"
        },
        "MCTPI3CTarget": {
            "properties": {
                "Address": {
                    "description": "The 6-byte PID for the device on the I3C bus",
                    "type": ["string", "array"]
                },
                "Bus": {
                    "description": "The bus index to which the device is attached",
                    "type": "string"
                },
                "Inventory": {
                    "description": "The inventory name associated with this device",
                    "type": "string"
                },
                "Name": {
                    "description": "A recognisable name for the device",
                    "type": "string"
                },
                "PLDMSensors": {
                    "items": {
                        "properties": {
                            "ID": {
                                "type": "integer"
                            },
                            "Name": {
                                "type": "string"
                            }
                        },
                        "required": ["ID", "Name"],
                        "type": "object"
                    },
                    "type": "array"
                },
                "Type": {
                    "type": "string",
                    "enum": ["MCTPI3CTarget"]
                }
            },
            "required": ["Address", "Bus", "Inventory", "Name", "Type"],
            "type": "object"
        }
    }
}
