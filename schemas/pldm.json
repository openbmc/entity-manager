{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "PldmDevice": {
            "description": "MCTP device that implements PLDM protocol. Use this for PLDMd to enumerate devices that don't have PDR tables on the inventory dbus",
            "additionalProperties": false,
            "properties": {
                "Name": {
                    "description": "A recognisable name for the device",
                    "type": "string"
                },
                "Type": {
                    "type": "string",
                    "const": "PldmDevice"
                },
                "UUID": {
                    "description": "A recognisable name for the device",
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
                }
            },
            "required": ["Name", "Type", "UUID"],
            "type": "object"
        }
    }
}
