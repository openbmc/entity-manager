{
    "$schema1": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "ModbusRTUDetect": {
            "description": "The definition for the modbus device.",
            "type": "object",
            "properties": {
                "Type": {
                    "description": "The type of configuration object.",
                    "const": "ModbusRTUDetect"
                },
                "Name": {
                    "description": "The name of the modbus device.",
                    "type": "string"
                },
                "Address": {
                    "description": "The address ranges for the modbus device.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "RangeStart": {
                                "description": "The start address for the address range of the modbus device.",
                                "type": "number"
                            },
                            "RangeEnd": {
                                "description": "The end address for the address range of the modbus device.",
                                "type": "number"
                            }
                        },
                        "required": ["RangeStart", "RangeEnd"]
                    }
                },
                "DataEndianness": {
                    "description": "The byte order used for storing multi-register content of float or double data types.",
                    "enum": ["Big", "Little"]
                },
                "SerialPort": {
                    "description": "The list of serial ports where this device is connected.",
                    "type": "array",
                    "items": {
                        "description": "The name of the serial port",
                        "type": "string"
                    }
                },
                "Registers": {
                    "description": "The Modbus register definition.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Name": {
                                "description": "The name of the register.",
                                "enum": [
                                    "PartNumber",
                                    "SparePartNumber",
                                    "SerialNumber",
                                    "BuildDate",
                                    "Model",
                                    "Manufacturer"
                                ]
                            },
                            "Address": {
                                "description": "The address of the register.",
                                "type": "number"
                            },
                            "Size": {
                                "description": "The size of the register in bytes.",
                                "type": "number"
                            },
                            "Format": {
                                "description": "The format for interpreting the contents of a register.",
                                "enum": ["String", "Integer"]
                            }
                        },
                        "required": ["Name", "Address", "Size", "Format"]
                    }
                }
            },
            "required": [
                "Name",
                "Type",
                "Address",
                "DataEndianness",
                "SerialPort",
                "Registers"
            ]
        },
        "ModbusRegisterDef": {
            "description": "The Modbus register definition.",
            "type": "object",
            "properties": {
                "Name": {
                    "description": "The name of the register.",
                    "type": "string"
                },
                "Address": {
                    "description": "The address of the register.",
                    "type": "number"
                },
                "Size": {
                    "description": "The size of the register in bytes.",
                    "type": "number"
                },
                "Format": {
                    "description": "The format for interpreting the contents of a register.",
                    "enum": ["String", "Integer", "Float"]
                }
            },
            "required": ["Name", "Address", "Size", "Format"]
        },
        "ModbusRTUDevice": {
            "description": "The definition for the modbus device.",
            "type": "object",
            "properties": {
                "Type": {
                    "description": "The type of configuration object",
                    "enum": ["ModbusRTUFlowMeter", "ModbusRTUPumpUnit"]
                },
                "Name": {
                    "description": "The name of the modbus device.",
                    "type": "string"
                },
                "Address": {
                    "description": "The address of the modbus device.",
                    "type": "number"
                },
                "SerialPort": {
                    "description": "The serial port or Link TTY on which this device is discovered.",
                    "type": "string"
                },
                "DataEndianness": {
                    "description": "The byte order used for storing multi-register content of float or double data types.",
                    "enum": ["Big", "Little"]
                },
                "SensorRegisters": {
                    "description": "The sensor registers for the modbus device.",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/ModbusRegisterDef"
                    }
                },
                "FirmwareRegister": {
                    "description": "The register for the modbus device firmware.",
                    "$ref": "#/$defs/ModbusRegisterDef"
                },
                "StatusBits": {
                    "description": "The status bits for the modbus device.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Name": {
                                "description": "The name of the status bit.",
                                "type": "string"
                            },
                            "Address": {
                                "description": "The address for the status bit",
                                "type": "number"
                            },
                            "Position": {
                                "description": "The position of the bit in the register representing this status.",
                                "type": "number"
                            }
                        }
                    }
                }
            },
            "required": [
                "Name",
                "Type",
                "Address",
                "SerialPort",
                "DataEndianness",
                "SensorRegisters",
                "FirmwareRegister",
                "StatusBits"
            ]
        }
    }
}
