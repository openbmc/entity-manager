{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "PidZone": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "AccumulateSetPoint": {
                    "type": "boolean"
                },
                "CycleIntervalTimeMS": {
                    "type": "number"
                },
                "FailSafePercent": {
                    "type": "number"
                },
                "MinThermalOutput": {
                    "type": "number"
                },
                "Name": {
                    "type": "string"
                },
                "Type": {
                    "const": "Pid.Zone"
                },
                "UpdateThermalsTimeMS": {
                    "type": "number"
                },
                "ZoneIndex": {
                    "type": "number"
                }
            },
            "required": ["FailSafePercent", "MinThermalOutput", "Name", "Type"]
        }
    }
}
