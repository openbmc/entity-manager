/dts-v1/;
/plugin/;
/ {
    compatible = "$platform";
    fragment@0{
        target = <&i2c$bus>;
        __overlay__{
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            eeprom@$Name {
                compatible = "atmel,24c02";
                reg = <$address>;
                oemname1 = "$Name";
                pagesize = <64>;
            };
        };

    };
};